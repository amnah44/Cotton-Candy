<!--  style btn search  -->
    <style name="btnSearchCountry" >
        <item name="android:background">@drawable/box_search_view</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">left</item>
        <item name="android:hint">Search Here</item>
        <item name="android:iconifiedByDefault">false</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/txt2x9</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:translationZ">@dimen/translZ10x4</item>
        <item name="android:elevation">@dimen/elev6x10</item>
    </style>

<!--  style recycler view  -->
    <style name="recyclerViewCity">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

<!--  style card city  -->
    <style name="cardViewCity">
        <item name="android:translationZ">0dp</item>
        <item name="android:elevation">@dimen/elev6x10</item>
    </style>

<!--  style text view population value -->
    <style name="textPopulationValue">
        <item name="android:fontFamily">@font/chonburi</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/txt3x</item>
        <item name="android:textStyle">bold</item>
    </style>

<!--  style text   -->
    <style name="text">
        <item name="android:fontFamily">@font/jacques_francois</item>
    </style>
<!--  style text name city and country  -->
    <style name="text.textTitleCard">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/txt_color</item>
        <item name="android:textSize">@dimen/txt2x9</item>
    </style>

<!--  style bg  -->
    <style name="bgStyle">
        <item name="android:background">@color/bg_color</item>
    </style>

<!--  style card info city  -->
    <style name="infoCity">
        <item name="android:background">@drawable/city_shape</item>
        <item name="android:elevation">@dimen/elev1x</item>
        <item name="android:orientation">vertical</item>
    </style>

<!--  style text bold  -->
    <style name="bold">
        <item name="android:textStyle">bold</item>
    </style>

<!--  style for color  -->
    <style name="bold.black">
        <item name="android:textColor">@color/black</item>
    </style>

<!--  style for color  -->
    <style name="bold.gray">
        <item name="android:textColor">@color/gray</item>
    </style>

<!--  style for color  -->
    <style name="bold.gray_500">
        <item name="android:textColor">@color/gray_500</item>
    </style>


    <!--  style text card info city   -->
    <style name="bold.black.textCardInfo">
        <item name="android:textSize">@dimen/txt2x10</item>
    </style>

<!--  style text card title  -->
    <style name="bold.gray.textCardTitle">
        <item name="android:textSize">@dimen/txt1x</item>
    </style>

<!--  style title layout info city  -->
    <style name="text.textTitleCard.textTitleCityInfo">
        <item name="android:textSize">30sp</item>
    </style>

<!--  style search view city   -->
    <style name="searchViewCity">
        <item name="android:background">@drawable/box_search_view</item>
    </style>

<!--  style text all population in layout search   -->
    <style name="txtPopulation">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/txt_small</item>
        <item name="android:visibility">invisible</item>
    </style>

<!--  style display text search  -->
    <style name="bold.black.textDisplaySearch">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/txt3x</item>
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">@font/gabriela</item>
    </style>

<!--  style bg layoutInfoProfile   -->
    <style name="layoutInfoProfile">
        <item name="android:background">@drawable/button</item>
        <item name="android:orientation">vertical</item>
    </style>

<!--  style titleProfile  -->
    <style name="bold.black.titleProfile">
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/txt2x9</item>
    </style>

<!--  style card infoCityForProfile  -->
    <style name="infoCityForProfile">
        <item name="android:background">@drawable/city_shape</item>
    </style>

<!--  style horizontal -->
    <style name="horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

<!--  style vertical -->
    <style name="vertical">
        <item name="android:orientation">vertical</item>
    </style>
<!--  style textCardValuseForProfile  -->
    <style name="bold.textCardValuseForProfile">
        <item name="android:textSize">@dimen/txt2x9</item>
        <item name="android:textColor">@color/txt_color</item>

    </style>


</resources>