<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Cotton" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/txt_color</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/color1</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="splashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_pic</item>
        <item name="android:statusBarColor">@color/splashBackground</item>
    </style>

    <style name="search_view_shape">
        <item name="android:background">@drawable/search_shape</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>


    <style name="text_view">
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">italic</item>


    </style>

    <style name="text_view_data">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/txt_color</item>
        <item name="android:textStyle">italic</item>

    </style>

<!--  style card   -->
    <style name="card" >
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">5dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:layout_width">270dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_weight">1</item>
    </style>

<!--  style text card  -->
    <style name="textCard">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
    </style>

<!--  style content card  -->
    <style name="textCard.content">
        <item name="android:paddingStart">7dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
<!--  style title card  -->
    <style name="textCard.title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#8e1313</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:layout_gravity">top</item>
    </style>

</resources>