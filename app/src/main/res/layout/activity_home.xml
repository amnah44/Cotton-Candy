<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    tools:context=".ui.HomeActivity">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
  >

    <ImageView
        android:id="@+id/background"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:alpha="0.1"
        android:src="@drawable/home_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="@dimen/margin3x"
        android:src="@drawable/ic_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/txt_icon"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_margin="@dimen/margin2x"
        android:alpha="0.6"
       style="@style/txt_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin5x"
        android:layout_marginTop="@dimen/margin2x"
        android:layout_marginEnd="@dimen/margin5x"
        android:padding="@dimen/padding_small"
        app:layout_constraintTop_toBottomOf="@id/background"
       >

        <TableRow
            android:background="@color/color1"
            android:padding="@dimen/padding5">

            <TextView
                android:id="@+id/txt_city"
                style="@style/text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/city" />

            <TextView
                android:id="@+id/city"
                style="@style/text_view_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/city" />

        </TableRow>

        <TableRow
            android:background="@color/color2"
            android:padding="@dimen/padding5">

            <TextView
                style="@style/text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/country" />


            <TextView
                android:id="@+id/Country"
                style="@style/text_view_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/country" />
        </TableRow>

        <TableRow
            android:background="@color/color3"
            android:padding="@dimen/padding5">

            <TextView
                style="@style/text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/capital" />

            <TextView
                android:id="@+id/capital"
                style="@style/text_view_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/capital" />

        </TableRow>

        <TableRow
            android:background="@color/color4"
            android:padding="@dimen/padding5">

            <TextView
                style="@style/text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/population" />

            <TextView
                android:id="@+id/population"
                style="@style/text_view_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/population" />

        </TableRow>
    </TableLayout>

    <ImageView
        android:id="@+id/ic_arrow_left"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="@dimen/margin1x"
        android:elevation="@dimen/elev2x"
        android:src="@drawable/ic_arrow_left"
        app:layout_constraintEnd_toStartOf="@+id/ic_arrow_right"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"
        />

    <ImageView
        android:id="@+id/ic_arrow_right"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_arrow_right"
        android:elevation="@dimen/elev2x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ic_arrow_left"
        app:layout_constraintTop_toTopOf="@+id/ic_arrow_left" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/appCompatButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin2x"
        android:background="@drawable/btn_search_shape"
        android:elevation="@dimen/elev2x"
        android:gravity="center"
        android:text="@string/web_search"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/txt2x"
        app:layout_constraintEnd_toEndOf="@+id/tableLayout"
        app:layout_constraintStart_toStartOf="@+id/tableLayout"
        app:layout_constraintTop_toBottomOf="@+id/ic_arrow_left" />

  


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
