<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:elevation="@dimen/margin3x"
    android:id="@+id/cardView"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin1x"
    android:layout_width="300dp"
    android:padding="@dimen/margin1x"
    app:cardBackgroundColor="@color/color2"
    app:cardCornerRadius="16dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/expand"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:layout_marginEnd="@dimen/margin2x"
            android:background="@drawable/btn_expand"
            android:elevation="@dimen/elev1x"
            android:text="☝"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@+id/cities_box"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cities_box" />


        <TextView
            android:id="@+id/population_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin2x"
            android:text="16278,44"
            android:textColor="@color/black"
            android:textSize="@dimen/txt3x"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/country_box" />


        <TextView
            android:id="@+id/cities_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/taviraj_black_italic"
            android:text="baghdad"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/txt2x"

            app:layout_constraintBottom_toBottomOf="@id/country_box"
            app:layout_constraintStart_toEndOf="@id/coma"
            app:layout_constraintTop_toTopOf="@id/country_box" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_right"
            app:layout_constraintEnd_toEndOf="@+id/expand"
            app:layout_constraintStart_toStartOf="@+id/expand"
            app:layout_constraintTop_toBottomOf="@+id/population_box" />


        <TextView
            android:id="@+id/coma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" , "
            android:fontFamily="@font/taviraj_black_italic"

            android:textColor="@color/txt_color"
            android:textSize="@dimen/txt2x"
            app:layout_constraintStart_toEndOf="@id/country_box"
            app:layout_constraintTop_toTopOf="@id/country_box"
            app:layout_constraintBottom_toBottomOf="@id/country_box"
           />

        <TextView
            android:id="@+id/country_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin1x"
            android:layout_marginTop="@dimen/margin2x"
            android:fontFamily="@font/taviraj_black_italic"
            android:text="iraq"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/txt2x"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.074"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

