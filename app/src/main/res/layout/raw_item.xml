<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:elevation="@dimen/margin3x"
    android:id="@+id/cardView"
    android:layout_height="132dp"
    android:layout_margin="@dimen/margin1x"
    android:layout_width="300dp"
    android:padding="@dimen/margin1x"
    app:cardBackgroundColor="@color/color2"
    app:cardCornerRadius="16dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/latitude2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:text="@string/latitude"
            android:textColor="@color/gray"
            android:textSize="@dimen/txt1x"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/longitude2"
            app:layout_constraintTop_toTopOf="@+id/longitude2" />

        <TextView
            android:id="@+id/longitude2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:text="Longitude"
            android:textColor="@color/gray"
            android:textSize="@dimen/txt1x"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@+id/latitude2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/population_box4"
            app:layout_constraintTop_toTopOf="@+id/population_box4" />

        <TextView
            android:id="@+id/population_box4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/population"
            android:textColor="@color/gray"
            android:textSize="@dimen/txt1x"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@+id/longitude2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cities_box" />

        <TextView
            android:id="@+id/latitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:textSize="@dimen/txt2x"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="@+id/latitude2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/latitude2"
            app:layout_constraintTop_toBottomOf="@+id/latitude2" />

        <TextView
            android:id="@+id/longitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:textSize="@dimen/txt2x"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="@+id/longitude2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/longitude2"
            app:layout_constraintTop_toBottomOf="@+id/longitude2" />

        <TextView
            android:id="@+id/cities_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="city"
            android:textColor="@color/gray"
            android:textSize="@dimen/txt2x"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/country_box"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toStartOf="@+id/country_box"
            app:layout_constraintTop_toBottomOf="@+id/country_box" />

        <TextView
            android:id="@+id/country_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin1x"
            android:layout_marginTop="@dimen/margin1x"
            android:text="country"
            android:textColor="@color/black"
            android:textSize="@dimen/txt3x"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.074"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/population_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:textColor="@color/gray"
            android:textSize="@dimen/txt2x"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintVertical_bias="0.48000002"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="@+id/population_box4"
            app:layout_constraintStart_toStartOf="@+id/population_box4"
            app:layout_constraintTop_toBottomOf="@+id/population_box4" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>