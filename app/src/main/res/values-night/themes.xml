<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Cotton" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

<!--  style btn search  -->
    <style name="btnSearchCountry" >
        <item name="android:background">@drawable/box_search_view</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">left</item>
        <item name="android:hint">Search Here</item>
        <item name="android:iconifiedByDefault">false</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/txt2x9</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:translationZ">@dimen/translZ10x4</item>
        <item name="android:elevation">@dimen/elev6x10</item>
    </style>

</resources>